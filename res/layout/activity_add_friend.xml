<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".ActivityAddFriend" >

    <TextView
        android:id="@+id/add_friend_title_text"
        android:text="@string/text_add_friend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textSize="48dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/add_friend_description_text"
        android:text="@string/text_add_friend_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textSize="12dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/add_friend_self_section_text"
        android:text="@string/text_add_friend_self_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textSize="24dip"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <RelativeLayout
    	android:id="@+id/add_friend_self_section"
    	android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout android:id="@+id/add_friend_self_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dip"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="4dip">
 
            <ImageView
                android:id="@+id/add_friend_self_avatar_image"
                android:layout_width="150dip"
                android:layout_height="150dip" />
 
        </LinearLayout>
 
        <TextView
            android:id="@+id/add_friend_self_nickname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/add_friend_self_avatar"
            android:layout_toRightOf="@+id/add_friend_self_avatar"
            android:typeface="sans"
            android:textSize="24dip"
            android:textStyle="bold" />
 
        <TextView
            android:id="@+id/add_friend_self_transport_public_key_fingerprint_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_friend_self_nickname_text"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/add_friend_self_avatar"
            android:typeface="sans"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/add_friend_self_transport_public_key_timestamp_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_friend_self_transport_public_key_fingerprint_text"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/add_friend_self_avatar"
            android:typeface="sans"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/add_friend_self_hidden_service_hostname_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_friend_self_transport_public_key_timestamp_text"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/add_friend_self_avatar"
            android:typeface="sans"
            android:textSize="12dip" />

    </RelativeLayout>

    <TextView
        android:id="@+id/add_friend_friend_section_text"
        android:text="@string/text_add_friend_friend_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textSize="24dip"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <RelativeLayout
    	android:id="@+id/add_friend_friend_section"
    	android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout android:id="@+id/add_friend_friend_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dip"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="4dip">
 
            <ImageView
                android:id="@+id/add_friend_friend_avatar_image"
                android:layout_width="150dip"
                android:layout_height="150dip" />
 
        </LinearLayout>
 
        <TextView
            android:id="@+id/add_friend_friend_nickname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/add_friend_friend_avatar"
            android:layout_toRightOf="@+id/add_friend_friend_avatar"
            android:typeface="sans"
            android:textSize="24dip"
            android:textStyle="bold" />
 
        <TextView
            android:id="@+id/add_friend_friend_transport_public_key_fingerprint_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_friend_friend_nickname_text"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/add_friend_friend_avatar"
            android:typeface="sans"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/add_friend_friend_transport_public_key_timestamp_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_friend_friend_transport_public_key_fingerprint_text"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/add_friend_friend_avatar"
            android:typeface="sans"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/add_friend_friend_hidden_service_hostname_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_friend_friend_transport_public_key_timestamp_text"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/add_friend_friend_avatar"
            android:typeface="sans"
            android:textSize="12dip" />
    
        <Button
            android:id="@+id/add_friend_add_button"
            android:text="@string/text_add_friend_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_friend_friend_hidden_service_hostname_text"
            android:layout_alignParentRight="true"
            android:typeface="sans"
            android:textSize="24dip"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>
