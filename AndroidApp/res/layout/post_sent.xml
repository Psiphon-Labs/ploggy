<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dip" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="4dip"
        android:background="@drawable/chat_bubble_sent" >

        <LinearLayout
            android:id="@+id/post_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/post_content_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dip"
                android:typeface="sans"
                android:textSize="12dip" />

            <TextView
                android:id="@+id/post_picture_download_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_picture_download_state"
                android:gravity="center"
                android:typeface="sans"
                android:textSize="12dip" />

            <ImageView
                android:id="@+id/post_picture_thumbnail"
                android:layout_width="@dimen/picture_thumbnail_width"
                android:layout_height="@dimen/picture_thumbnail_height"
                android:layout_centerVertical="true" />

        </LinearLayout>
    
        <TextView
            android:id="@+id/post_publisher_nickname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/post_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="4dip"
            android:typeface="sans"
            android:textSize="8dip"
            android:textStyle="bold" />
 
        <TextView
            android:id="@+id/post_timestamp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/post_content"
            android:layout_toRightOf="@+id/post_publisher_nickname_text"
            android:layout_marginRight="4dip"
            android:typeface="sans"
            android:textSize="8dip"
            android:textColor="#808080" />

        <ImageView
            android:id="@+id/post_delivery_state_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/post_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dip"
            android:src="@drawable/ic_partially_delivered" />

        <ImageView
            android:id="@+id/post_location_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/post_content"
            android:layout_toLeftOf="@+id/post_delivery_state_image"
            android:layout_marginLeft="4dip"
            android:src="@drawable/ic_location" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/post_publisher_avatar_image"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_weight="0" />
        
</LinearLayout>
