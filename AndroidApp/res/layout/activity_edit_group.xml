<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".ActivityEditGroup" >

    <TextView
        android:id="@+id/edit_group_title_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dip"
        android:gravity="center"
        android:text="@string/label_edit_group_title"
        android:typeface="sans"
        android:textSize="24dip"
        android:textStyle="bold"
        android:textColor="#F0F0FF"
        android:background="#687C97" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/edit_group_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dip"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="4dip">
 
            <ImageView
                android:id="@+id/edit_group_avatar_image"
                android:layout_width="100dip"
                android:layout_height="100dip" />
 
        </LinearLayout>
 
        <TextView
            android:id="@+id/edit_group_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/edit_group_avatar"
            android:text="@string/label_edit_group_name"
            android:typeface="sans"
            android:textSize="24dip"
            android:textStyle="bold" />
 
        <EditText
            android:id="@+id/edit_group_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/edit_group_avatar"
            android:layout_below="@+id/edit_group_name_label"
            android:typeface="sans"
            android:textSize="24dip"
            android:inputType="text|textCapSentences|textAutoCorrect"
            android:imeOptions="actionDone"
            android:singleLine="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/edit_group_members_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:layout_marginBottom="8dip"
        android:gravity="center"
        android:text="@string/label_edit_group_members"
        android:typeface="sans"
        android:textSize="24dip"
        android:textStyle="bold"
        android:textColor="#F0F0F0"
        android:background="#687C97" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/edit_group_member_list"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <Button
            android:id="@+id/edit_group_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/button_edit_group_save"
            android:typeface="sans"
            android:textSize="16dip"
            android:layout_marginTop="8dip"
            android:layout_marginBottom="8dip" />

    </LinearLayout>

</LinearLayout>
