<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/compose_message_content_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/compose_message_add_button"
        android:hint="@string/label_compose_message_content_hint"
        android:imeOptions="actionSend"
        android:inputType="text|textCapSentences|textAutoCorrect"
        android:maxLines="1"
        android:textSize="12dip"
        android:typeface="sans" />

    <ImageButton
        android:id="@+id/compose_message_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight = "true"
        android:src="@drawable/ic_button_add_message"
        android:background="@null" />

</RelativeLayout>
