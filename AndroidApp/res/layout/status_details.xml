<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/status_details_title_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_status_details_title"
        android:typeface="sans"
        android:textSize="32dip"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <RelativeLayout
        android:id="@+id/status_details_main_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/status_details_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dip"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="4dip">
 
            <ImageView
                android:id="@+id/status_details_avatar_image"
                android:layout_width="150dip"
                android:layout_height="150dip" />
 
        </LinearLayout>
 
        <TextView
            android:id="@+id/status_details_nickname_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/status_details_avatar"
            android:layout_toRightOf="@+id/status_details_avatar"
            android:text="@string/label_status_details_nickname"
            android:typeface="sans"
            android:textSize="24dip"
            android:textStyle="bold" />
 
        <TextView
            android:id="@+id/status_details_nickname_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_details_avatar"
            android:layout_below="@+id/status_details_nickname_label"
            android:typeface="sans"
            android:textSize="24dip"
            android:singleLine="true" />
 
        <TextView
            android:id="@+id/status_details_fingerprint_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_details_avatar"
            android:layout_below="@+id/status_details_nickname_text"
            android:text="@string/label_status_details_fingerprint"
            android:typeface="sans"
            android:textSize="12dip"
            android:textStyle="bold" />
 
        <TextView
            android:id="@+id/status_details_fingerprint_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_details_avatar"
            android:layout_below="@+id/status_details_fingerprint_label"
            android:typeface="sans"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/status_details_street_address_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_details_avatar"
            android:layout_below="@+id/status_details_fingerprint_text"
            android:text="@string/label_status_details_street_address"
            android:typeface="sans"
            android:textSize="12dip"
            android:textStyle="bold" />
 
        <TextView
            android:id="@+id/status_details_street_address_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_details_avatar"
            android:layout_below="@+id/status_details_street_address_label"
            android:typeface="sans"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/status_details_distance_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_details_avatar"
            android:layout_below="@+id/status_details_street_address_text"
            android:text="@string/label_status_details_distance"
            android:typeface="sans"
            android:textSize="12dip"
            android:textStyle="bold" />
 
        <TextView
            android:id="@+id/status_details_distance_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_details_avatar"
            android:layout_below="@+id/status_details_distance_label"
            android:typeface="sans"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/status_details_coordinates_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_details_avatar"
            android:layout_below="@+id/status_details_distance_text"
            android:text="@string/label_status_details_coordinates"
            android:typeface="sans"
            android:textSize="12dip"
            android:textStyle="bold" />
 
        <TextView
            android:id="@+id/status_details_coordinates_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_details_avatar"
            android:layout_below="@+id/status_details_coordinates_label"
            android:typeface="sans"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/status_details_precision_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_details_avatar"
            android:layout_below="@+id/status_details_coordinates_text"
            android:text="@string/label_status_details_precision"
            android:typeface="sans"
            android:textSize="12dip"
            android:textStyle="bold" />
 
        <TextView
            android:id="@+id/status_details_precision_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_details_avatar"
            android:layout_below="@+id/status_details_precision_label"
            android:typeface="sans"
            android:textSize="12dip" />
            
        <TextView
            android:id="@+id/status_details_status_timestamp_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_details_avatar"
            android:layout_below="@+id/status_details_precision_text"
            android:text="@string/label_status_details_status_timestamp"
            android:typeface="sans"
            android:textSize="12dip"
            android:textStyle="bold" />
 
        <TextView
            android:id="@+id/status_details_status_timestamp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_details_avatar"
            android:layout_below="@+id/status_details_status_timestamp_label"
            android:typeface="sans"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/status_details_last_received_status_timestamp_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_details_avatar"
            android:layout_below="@+id/status_details_status_timestamp_text"
            android:text="@string/label_status_details_last_received_status_timestamp"
            android:typeface="sans"
            android:textSize="12dip"
            android:textStyle="bold" />
 
        <TextView
            android:id="@+id/status_details_last_received_status_timestamp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_details_avatar"
            android:layout_below="@+id/status_details_last_received_status_timestamp_label"
            android:typeface="sans"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/status_details_last_sent_status_timestamp_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_details_avatar"
            android:layout_below="@+id/status_details_last_received_status_timestamp_text"
            android:text="@string/label_status_details_last_sent_status_timestamp"
            android:typeface="sans"
            android:textSize="12dip"
            android:textStyle="bold" />
 
        <TextView
            android:id="@+id/status_details_last_sent_status_timestamp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_details_avatar"
            android:layout_below="@+id/status_details_last_sent_status_timestamp_label"
            android:typeface="sans"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/status_details_added_timestamp_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_details_avatar"
            android:layout_below="@+id/status_details_last_sent_status_timestamp_text"
            android:text="@string/label_status_details_added_timestamp"
            android:typeface="sans"
            android:textSize="12dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status_details_added_timestamp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/status_details_avatar"
            android:layout_below="@+id/status_details_added_timestamp_label"
            android:typeface="sans"
            android:textSize="12dip" />

        <ImageView
            android:id="@+id/status_details_map_image"
            android:src="@drawable/sample_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status_details_last_sent_status_timestamp_text" />

    </RelativeLayout>

</LinearLayout>
