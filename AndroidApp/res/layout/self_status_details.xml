<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/self_status_details_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dip"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="4dip">
 
            <ImageView
                android:id="@+id/self_status_details_avatar_image"
                android:layout_width="150dip"
                android:layout_height="150dip" />
 
        </LinearLayout>
 
        <TextView
            android:id="@+id/self_status_details_nickname_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/self_status_details_avatar"
            android:layout_toRightOf="@+id/self_status_details_avatar"
            android:text="@string/label_status_details_nickname"
            android:typeface="sans"
            android:textSize="12dip"
            android:textStyle="bold" />
 
        <TextView
            android:id="@+id/self_status_details_nickname_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/self_status_details_avatar"
            android:layout_below="@+id/self_status_details_nickname_label"
            android:typeface="sans"
            android:textSize="12dip" />
 
        <TextView
            android:id="@+id/self_status_details_fingerprint_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/self_status_details_avatar"
            android:layout_below="@+id/self_status_details_nickname_text"
            android:text="@string/label_status_details_fingerprint"
            android:typeface="sans"
            android:textSize="12dip"
            android:textStyle="bold" />
 
        <TextView
            android:id="@+id/self_status_details_fingerprint_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/self_status_details_avatar"
            android:layout_below="@+id/self_status_details_fingerprint_label"
            android:typeface="sans"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/self_status_details_message_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/self_status_details_avatar"
            android:layout_below="@+id/self_status_details_fingerprint_text"
            android:text="@string/label_status_details_message"
            android:typeface="sans"
            android:textSize="12dip"
            android:textStyle="bold" />
 
        <AutoCompleteTextView
            android:id="@+id/self_status_details_message_edit"
            android:inputType="text"
            android:imeOptions="actionSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/self_status_details_avatar"
            android:layout_below="@+id/self_status_details_message_label"
            android:typeface="sans"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/self_status_details_street_address_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/self_status_details_avatar"
            android:layout_below="@+id/self_status_details_message_edit"
            android:text="@string/label_status_details_street_address"
            android:typeface="sans"
            android:textSize="12dip"
            android:textStyle="bold" />
 
        <TextView
            android:id="@+id/self_status_details_street_address_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/self_status_details_avatar"
            android:layout_below="@+id/self_status_details_street_address_label"
            android:typeface="sans"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/self_status_details_coordinates_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/self_status_details_avatar"
            android:layout_below="@+id/self_status_details_street_address_text"
            android:text="@string/label_status_details_coordinates"
            android:typeface="sans"
            android:textSize="12dip"
            android:textStyle="bold" />
 
        <TextView
            android:id="@+id/self_status_details_coordinates_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/self_status_details_avatar"
            android:layout_below="@+id/self_status_details_coordinates_label"
            android:typeface="sans"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/self_status_details_precision_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/self_status_details_avatar"
            android:layout_below="@+id/self_status_details_coordinates_text"
            android:text="@string/label_status_details_precision"
            android:typeface="sans"
            android:textSize="12dip"
            android:textStyle="bold" />
 
        <TextView
            android:id="@+id/self_status_details_precision_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/self_status_details_avatar"
            android:layout_below="@+id/self_status_details_precision_label"
            android:typeface="sans"
            android:textSize="12dip" />
            
        <TextView
            android:id="@+id/self_status_details_message_timestamp_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/self_status_details_avatar"
            android:layout_below="@+id/self_status_details_precision_text"
            android:text="@string/label_status_details_message_timestamp"
            android:typeface="sans"
            android:textSize="12dip"
            android:textStyle="bold" />
 
        <TextView
            android:id="@+id/self_status_details_message_timestamp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/self_status_details_avatar"
            android:layout_below="@+id/self_status_details_message_timestamp_label"
            android:typeface="sans"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/self_status_details_location_timestamp_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/self_status_details_avatar"
            android:layout_below="@+id/self_status_details_message_timestamp_text"
            android:text="@string/label_status_details_location_timestamp"
            android:typeface="sans"
            android:textSize="12dip"
            android:textStyle="bold" />
 
        <TextView
            android:id="@+id/self_status_details_location_timestamp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/self_status_details_avatar"
            android:layout_below="@+id/self_status_details_location_timestamp_label"
            android:typeface="sans"
            android:textSize="12dip" />

    </RelativeLayout>

</LinearLayout>
